<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQLizer"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50px" />
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ComboBox>
            <ComboBoxItem>JAVA to SQL</ComboBoxItem>
            <ComboBoxItem>SQL to JAVA</ComboBoxItem>
        </ComboBox>
        
        <TextBox x:Name="FromTextBox" Grid.Row="1" TextWrapping="Wrap" AcceptsReturn="True" TextChanged="FromTextBox_TextChanged"/>
        <RichTextBox x:Name="ToTextBox" Grid.Row="1" Grid.Column="1" AcceptsReturn="True" IsReadOnly="True"/>
        <Slider Grid.Column="1" VerticalAlignment="Center" Margin="25 0"></Slider>
    </Grid>
</Window>
